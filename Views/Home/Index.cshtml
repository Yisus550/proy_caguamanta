@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!-- https://coolors.co/palette/d9ed92-b5e48c-99d98c-76c893-52b69a-34a0a4-168aad-1a759f-1e6091-184e77 -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Document</title>
  </head>
  <body>
    <div
      class="container mt-5 d-flex justify-content-center"
      style="width: clamp(348px, 50%, 500px); color: #1e6091"
    >
      <form style="width: clamp(548px, 50%, 600px)">
        <div
          class="container border p-4 rounded-4 shadow"
          style="background-color: #99d98c"
        >
          <div class="container text-center">
            <div class="col-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="128"
                height="128"
                fill="currentColor"
                class="bi bi-person-circle"
                viewBox="0 0 16 16"
              >
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path
                  fill-rule="evenodd"
                  d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                />
              </svg>
              <h2 class="mt-2">Login</h2>
            </div>
          </div>

          <div class="container">
            <div class="row">
              <div class="col-12">
                <div
                  asp-validation-summary="ModelOnly"
                  class="text-danger"
                ></div>

                <div class="row mt-3">
                  <div class="col-12">
                    <label class="form-label">
                      Usuario</label
                    >
                    <input type="text" class="form-control" />
                    <span class="text-danger"
                    ></span>
                  </div>
                </div>

                <div class="row mt-2">
                  <div class="col-12">
                    <label class="form-label"
                      >Contraseña</label
                    >
                    <input type="password" class="form-control" />
                    <span class="text-danger"
                    ></span>
                  </div>
                </div>
                <div class="row mt-5">
                  <div class="col-5">
                    <button
                      class="btn btn-secondary text-white form-control border-0"
                      style="background-color: #34a0a4"
                      type="submit"
                      asp-action="Login"
                    >
                      Ingresar&nbsp;
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
