@model IEnumerable<proy_caguamanta.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Cliente";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1> LISTA DE CLIENTES</h1>

<div class="container">
    <div class="row mt-5">
        <div class="col-3">
            <a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar nuevo</a>
        </div>
        <div class="col-3">
            <a class="btn btn-success text-white form-control" asp-action="CrearMulti">Agregar Multiples</a>
        </div>
        <div class="col-3">
            <a class="btn btn-outline-secondary text-dark form-control" asp-action="EditarMultiple">Editar Multiples</a>
        </div>
        <div class="col-3">
            <a class="btn btn-outline-danger text-dark form-control" asp-action="EliminarMultiples">Eliminar Multiples</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Telefono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Telefono</td>
                                <td><a class="btn btn-outline-primary form-control" asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
                                <td><a class="btn btn-outline-danger form-control" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>NO HAY NINGUN CLIENTE</p>

            }
        </div>
    </div>
</div>
