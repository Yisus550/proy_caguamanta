@model proy_caguamanta.Models.Cliente
@{
	ViewData["Title"] = "Eliminar cliente";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-5">Eliminar cliente</h1>

<form method="post" asp-action="Eliminar">
	<div class="container">
		<p>¿Estas seguro de eliminar a este cliente?</p>
		<hr color="gray" />
		<p>
			<strong>Nombre</strong>: @Model.Nombre
		</p>
		<p>
			<strong>Telefono</strong>: @Model.Telefono
		</p>
		<button class="btn btn-danger" type="submit">Eliminar</button>
		<button class="btn btn-secondary" asp-action="Index">Cancelar</button>
	</div>
</form>