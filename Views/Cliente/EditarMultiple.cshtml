@model List<Cliente>

<form asp-action="EditarMultiple" method="post">
    <div class="container">
        <div class="row mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-10">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="row mt-2 p-4 border">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <label class="form-label">Nombre:</label>
                        <input asp-for="@Model[i].Nombre" class="form-control" />
                        <label class="form-label">Telefono:</label>
                        <input asp-for="@Model[i].Telefono" class="form-control" />
                    </div>
                }
                <div class="row mt-5">
                    <div class=" col-4">
                        <button class="btn btn-secondary text-white form-control" type="submit">Guardar &nbsp;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
