@model List<Empleado>

<form asp-action="EditarMultiple" method="post">
    <div class="container">
        <div class="row mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-10">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <input type="hidden" asp-for="@Model[i].Id" />

                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Nombre" class="form-label"></label>
                            <input asp-for="@Model[i].Nombre" class="form-control" />
                            <span asp-validation-for="@Model[i].Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Apellido" class="form-label"></label>
                            <input asp-for="@Model[i].Apellido" class="form-control" />
                            <span asp-validation-for="@Model[i].Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Correo" class="form-label"></label>
                            <input asp-for="@Model[i].Correo" class="form-control" />
                            <span asp-validation-for="@Model[i].Correo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Contrasena" class="form-label"></label>
                            <input asp-for="@Model[i].Contrasena" class="form-control" />
                            <span asp-validation-for="@Model[i].Contrasena" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Telefono" class="form-label"></label>
                            <input asp-for="@Model[i].Telefono" class="form-control" />
                            <span asp-validation-for="@Model[i].Telefono" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Direccion" class="form-label"></label>
                            <input asp-for="@Model[i].Direccion" class="form-control" />
                            <span asp-validation-for="@Model[i].Direccion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].PuestoId" class="form-label"></label>
                            <select asp-for="@Model[i].PuestoId" class="form-select" asp-items="ViewBag.Puesto">Selecciona uno</select>
                            <span asp-validation-for="@Model[i].PuestoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class=" col-10">
                            <label asp-for="@Model[i].Estado" class="form-label"></label>
                            <input asp-for="@Model[i].Estado" class="form-control" />
                            <span asp-validation-for="@Model[i].Estado" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="row mt-5">
                    <div class=" col-4">
                        <button class="btn btn-secondary text-white form-control" type="submit">Guardar &nbsp;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
