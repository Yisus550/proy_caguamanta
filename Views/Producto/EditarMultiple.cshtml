@model List<Producto>

<form asp-action="EditarMultiple" method="post">
    <div class="container">
        <div class="row mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-10">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="row mt-2 p-4 border">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <label class="form-label">Nombre:</label>
                        <input asp-for="@Model[i].Nombre" class="form-control" />
                        <label class="form-label">Descripcion:</label>
                        <input asp-for="@Model[i].Descripcion" class="form-control" />
                        <div class="row mt-2">
                            <div class=" col-10">
                                <label asp-for="@Model[i].CategoriaId" class="form-label"></label>
                                <select asp-for="@Model[i].CategoriaId" class="form-select" asp-items="ViewBag.Categoria">Seleccciona uno</select>
                                <span asp-validation-for="@Model[i].CategoriaId" class="text-danger"></span>
                            </div>
                        </div>
                        <label class="form-label">Precio:</label>
                        <input asp-for="@Model[i].Precio" class="form-control" />
                        <label class="form-label">Cantidad:</label>
                        <input asp-for="@Model[i].Cantidad" class="form-control" />
                    </div>
                }
                <div class="row mt-5">
                    <div class=" col-4">
                        <button class="btn btn-secondary text-white form-control" type="submit">Guardar &nbsp;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
