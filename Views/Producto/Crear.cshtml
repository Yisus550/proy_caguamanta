@model proy_caguamanta.Models.Producto
@{
	ViewData["Title"] = "Crear productos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CREAR MATERIALES</h1>

<form method="post" asp-action="Crear">
	<div class="conteiner">
		<div class="row mt-5">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-12">

				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="Nombre" class="form-label"></label>
						<input asp-for="Nombre" class="form-control" />
						<span asp-validation-for="Nombre" class="text-danger"></span>
					</div>
				</div>

				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="Descripcion" class="form-label"></label>
						<input asp-for="Descripcion" class="form-control" />
						<span asp-validation-for="Descripcion" class="text-danger"></span>
					</div>
				</div>

				<div class="row mt-2">
					<div class=" col-10">
						<label asp-for="IdCategoria">Categoria</label>
						<select asp-for="IdCategoria" class="form-control form-select-sm" asp-items="ViewBag.Categoria"></select>
						<span asp-validation-for="IdCategoria" class="text-danger"></span>
					</div>
				</div>

				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="Precio" class="form-label"></label>
						<input asp-for="Precio" class="form-control" />
						<span asp-validation-for="Precio" class="text-danger"></span>
					</div>
				</div>

				<div class="row mt-2">
					<div class="col-10">
						<label asp-for="Cantidad" class="form-label"></label>
						<input asp-for="Cantidad" class="form-control" />
						<span asp-validation-for="Cantidad" class="text-danger"></span>
					</div>
				</div>

				<div class="row mt-5">
					<div class="col-4">
						<button class="btn btn-secondary text-white form-control" type="submit">Guardar &nbsp;</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>