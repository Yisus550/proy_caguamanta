@model IEnumerable<proy_caguamanta.Models.Producto>
@{
	ViewData["Title"] = "Listado de Productos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1> LISTA DE PRODUCTOS</h1>

<div class="container">
	<div class="row mt-5">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar Nuevo</a>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">

			@if (Model.Count() > 0)
			{
			<table class="table table-striped border">
					<thead>
						<tr>
							<td>Nombre</td>
							<td>Descripcion</td>
							<td>Categoria</td>
							<td>Precio</td>
							<td>Cantidad</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Nombre</td>
								<td>@item.Descripcion</td>
								<td>@item.CategoriaId</td>
								<td>@item.Precio</td>
								<td>@item.Cantidad</td>
								<td><a class="btn btn-outline-primary form-control" asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
								<td><a class="btn btn-outline-danger form-control" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
							</tr>

						}
					</tbody>
				</table>
			}
			else
			{
				<p>NO HAY NINGUN PRODUCTO</p>
			}
		</div>

	</div>
</div>