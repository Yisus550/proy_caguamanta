@model IEnumerable<proy_caguamanta.Models.Producto>
@{
	ViewData["Title"] = "Listado de Productos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conteiner">
	<h1>Listado de productos</h1>
	<div class="row mt-4">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar nuevo</a>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-12">

			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">
					<thead>
						<tr>
							<td>Nombre</td>
							<td>Descripcion</td>
							<td>Categoria</td>
							<td>Precio</td>
							<td>Cantidad</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Nombre</td>
								<td>@item.Descripcion</td>
								<td>@item.IdCategoria</td>
								<td>@item.Precio</td>
								<td>@item.Cantidad</td>
							</tr>

						}
					</tbody>
				</table>
			}
			else
			{
				<p>No se encontraron elementos</p>
			}
		</div>

	</div>
</div>
