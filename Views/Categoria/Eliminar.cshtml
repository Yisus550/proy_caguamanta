@model proy_caguamanta.Models.Categoria
@{
    ViewData["Title"] = "Eliminar registros de estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ELIMINACION DE ESTUDIANTE</h2>

<div class="conteiner justify-content-center">

    <div class="row mt-4">
        <div class="col-12">
            <h3>DATOS DEL ESTUDIANTE A ELIMINAR:</h3>
            <p>Nombre: @Model.Nombre </p>
            <p>Direccion: @Model.Descripcion</p>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <p class="text-danger">¿Está seguro de que desea eliminar el cliente @Model.Nombre?</p>
    </div>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger text-white">Eliminar</button>
        <a asp-action="Index" class="btn btn-success text-white">Cancelar</a>
    </form>
</div>

