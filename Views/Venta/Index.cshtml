@model IEnumerable<proy_caguamanta.Models.Venta>
@{
	ViewData["Title"] = "Listado de Ventas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conteiner">
	<h1>Listado de Ventas</h1>
	<div class="row mt-4">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar nuevo</a>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table>

					<thead>
						<tr>
							<td>Fecha de venta</td>
							<td>codigo empleado</td>
							<td>codigo cliente</td>
							<td>Total</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<td>@item.FechaVenta</td>
						<td>@item.IdEmpleado</td>
						<td>@item.IdCliente</td>
						<td>@item.Importe</td>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>No se encontraron elementos</p>
			}
		</div>

	</div>
</div>
