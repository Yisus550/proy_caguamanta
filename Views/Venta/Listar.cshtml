@model IEnumerable<proy_caguamanta.Models.Venta>
@{
	ViewData["Title"] = "Listado de Ventas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<h1>Listado de Ventas</h1>
	<div class="row mt-4">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar nuevo</a>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">

					<thead>
						<tr>
							<td>Id</td>
							<td>Fecha de venta</td>
							<td>codigo empleado</td>
							<td>codigo cliente</td>
							<td>Total</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.FechaVenta</td>
								<td>@item.IdEmpleado</td>
								<td>@item.IdCliente</td>
								<td>@item.Importe</td>
								<td><a class="btn btn-outline-primary form-control" asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
								<td><a class="btn btn-outline-danger form-control" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>No se encontraron elementos</p>
			}
		</div>
	</div>
</div>
