@{
	ViewData["Title"] = "Listado de Compras";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<form asp-action="FinalizarCompra" method="post">
		<div class="col-12">
			<div class="row">
				<div class="col-8">
					<div class="col-12 mb-3">
						<div class="row">
							<div class="col-12">
								<div class="col-12">
									<label for="productoDropdown">Material:</label>
									@Html.DropDownList("MaterialId",
																		ViewBag.SelectListMateriales as List<SelectListItem>,
																		"Seleccione un Material", new
																		{
																			@class = "form-select border rounded-5 py-2 px-3 w-50 mt-2 mb-3",
																			id = "productoDropdown"
																		})

										<div class="row">
											<label for="cantidad" class="form-label my-2 col-2 text-end">Cantidad:</label>
										<input class="form-control-sm border-dark col-3 my-2" type="number" class="col-1 border btn mt-2 mb-3" id="cantidad" name="cantidadMaterial" value="1" min="1" max="100" />
										</div>	
								
								</div>
							</div> <!-- Producto y cantidad -->
							<div class="col-6d-inline-block my-3">
								<button asp-action="AgregarMaterial" class="btn btn-primary w-25">Agregar Materiales</button>
								<button asp-action="LimpiarTabla" class="btn btn-outline-danger mx-1">Limpiar</button>
							</div> <!-- Botones -->
						</div>
					</div> <!-- Formulario de productos -->
					<hr color="gray" class="mx-3" />
					<div class="col-12 my-3 pt-2">
						<table class="table table-hover shadow-sm border">
							<thead>
								<tr>
									<th>Materiales</th>
									<th>Cantidad</th>
									<th>Precio /u</th>
									<th>Total</th>
								</tr>
							</thead>
							<tbody>
								@if (ViewBag.Material != null)
								{
									foreach (var item in ViewBag.Material)
									{
										<tr>
											<td class="col-4">@item.Nombre</td>
											<td class="col-3">@item.Cantidad</td>
											<td class="col-2">@item.Precio</td>
											<td class="col-3">@item.SubTotal</td>
										</tr>
									}
								}
							</tbody>
						</table>
					</div> <!-- Tabla de productos -->
				</div>
				<div class="col-4">
					<div class="col-12">
						<div class="border rounded-4 p-3 shadow" align="center">
							<div class="mb-4 px-3 mt-5">
								<h3 class="fw-bold">Cahuamanta y mas</h3>
								<p>ID: @ViewBag.IdCompra</p>
								<p>@DateTime.Today.ToString("dd MMMM yyyy")</p>
								<label for="EmpleadoDropdown">Empleados:</label>
								@Html.DropDownList("idEmpleado",
																	ViewBag.SelectEmpleado as List<SelectListItem>,
																	"Seleccione un Empleado", new
																	{
																		@class = "form-select border rounded-5 py-2 px-3 w-50 mt-2 mb-3",
																		id = "EmpleadoDropdown"
																	})
							</div>
							<hr style="border: 1px dashed;" />
							<label for="ProveedorDropdown">Empleados:</label>
							@Html.DropDownList("idProveedor",
																ViewBag.SelectProveedor as List<SelectListItem>,
																"Seleccione un Empleado", new
																{
																	@class = "form-select border rounded-5 py-2 px-3 w-50 mt-2 mb-3",
																	id = "ProveedorDropdown"
																})
							<hr style="border: 1px dashed;" />
							<div class="mt-4 px-3 fw-bold">
								<p class="text-end fs-4">Total: $@ViewBag.Total</p>
							</div>

							<div class="col justify-content-center">
								<div class="row">
									<div class="col-12 mb-5">
										<div class="col-12">
											<input type="submit" value="Finalizar Compra" class="btn btn-success" />
										</div>
									</div>
								</div>
							</div> <!-- Finalizar venta -->
						</div>
					</div> <!-- Ticket -->
				</div>
			</div>

		</div>
		<div>
			
		</div>
	</form>
</div>