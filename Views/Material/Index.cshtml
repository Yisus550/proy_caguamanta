@model IEnumerable<proy_caguamanta.Models.Material>
@{
	ViewData["Title"]="Listado de materiales";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> LISTA DE MATERIALES</h1>

<div class="container">
	<div class="row mt-5">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar Nuevo</a>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">
					
					<thead>
						<tr>
							<td>Nombre</td>
							<td>Cantidad</td>
							<td>id Proveedor</td>
							<td>id Categoria</td>
							<td>Costo</td>
						</tr>
					</thead>

					<tbody>
						@foreach(var item in Model)
						{
							<tr>
								<td>@item.Nombre</td>
								<td>@item.Cantidad</td>
							    <td>@item.IdProveedor</td>
								<td>@item.IdCategoria</td>
								<td>@String.Format("{0:C}", item.Costo)</td>
							</tr>
						}
					</tbody>

				</table>
			}
			else
			{
				<p>NO HAY NINGUN MATERIAL</p>
			}
		</div>

	</div>
</div>