@model IEnumerable<proy_caguamanta.Models.DetalleVenta>
@{
    ViewData["Title"] = "Lista de Detalle de Venta";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1> LISTA DE ELEMTOS DE LA TABLA DETALLE DE VENTA</h1>

<div class="container">
    <div class="row mt-5">
        <div class="col-3">
            <a class="btn btn-primary text-white form-control" asp-action="Crear">Crear Detalle de Venta</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>IdVenta</th>
                            <th>IdProducto</th>
                            <th>PrecioUnidad</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <th>@item.IdVenta</th>
                                <td>@item.IdProducto</td>
                                <td>@item.PrecioUnidad</td>
                                <th>@item.Cantidad</th>
                                <td>@String.Format("{0:C}", item.Importe)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>NO HAY NINGUN DETALLE DE VENTA</p>

            }
        </div>
    </div>
</div>