@model IEnumerable<proy_caguamanta.Models.DetalleCompra>
@{
    ViewData["Title"] = "Lista de Detalle de Compra";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1> LISTA DE DETALLES DE COMPRA</h1>

<div class="container">
    <div class="row mt-5">
        <div class="col-3">
            <a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar Nuevo</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>IdCompra</th>
                            <th>IdProducto</th>
                            <th>PrecioUnidad</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.IdCompra</td>
                                <td>@item.IdProducto</td>
                                <td>@item.PrecioUnidad</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Importe</td>
                                <td><a class="btn btn-outline-primary form-control" asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
                                <td><a class="btn btn-outline-danger form-control" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>NO HAY NINGUN DETALLE DE COMPRA</p>

            }
        </div>
    </div>
</div>
