@model proy_caguamanta.Models.Puesto
@{
	ViewData["Title"] = "Eliminar Puesto";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-5">Eliminar Puesto</h1>

<form method="post" asp-action="Eliminar">
	<div class="container">
		<p>¿Estas seguro de eliminar este puesto?</p>
		<hr color="gray" />
		<p>
			<strong>Nombre</strong>: @Model.Nombre
		</p>
		<p>
			<strong>Sueldo</strong>: @Model.Sueldo
		</p>
		<button class="btn btn-danger" type="submit">Eliminar</button>
		<button class="btn btn-secondary" asp-action="Index">Cancelar</button>
	</div>
</form>