@model IEnumerable<proy_caguamanta.Models.Puesto>
@{
	ViewData["Title"] = "Listado de Puestos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>LISTA DE PUESTOS</h1>
	<div class="row mt-4">
		<div class="col-3">
			<a class="btn btn-primary text-white form-control" asp-action="Crear">Agregar nuevo</a>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table class="table table-striped border">

					<thead>
						<tr>
							<td>Nombre</td>
							<td>sueldo</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Nombre</td>
								<td>@item.Sueldo</td>
								<td><a class="btn btn-outline-primary form-control" asp-action="Editar" asp-route-id="@item.Id">Editar</a></td>
								<td><a class="btn btn-outline-danger form-control" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>NO HAY NINGUN PUESTO</p>
			}
		</div>

	</div>
