@model IEnumerable<proy_caguamanta.Models.Proveedor>
@{
	ViewData["Title"] = "Listado de Proveedores";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conteiner">
	<h1>Listado de Proveedores</h1>
	<div class="row mt-4">
		<div class="col-12">
			@if (Model.Count() > 0)
			{
				<table>

					<thead>
						<tr>
							<td>Nombre</td>
							<td>apellido</td>
							<td>Telefono</td>
							<td>Correo</td>
							<td>Empresa</td>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<td>
						<td>@item.Nombre</td>
						<td>@item.Apellido</td>
						<td>@item.Telefono</td>
						<td>@item.Correo</td>
						<td>@item.Empresa</td>
						</td>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>No se encontraron elementos</p>
			}
		</div>

	</div>
</div>
